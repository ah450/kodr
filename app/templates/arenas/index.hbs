
{{#if session.isAuthenticated}}
  {{#link-to 'arenas.create' class="btn btn-primary pull-right .create-arena" }} <i class="glyphicon glyphicon-plus"></i> Create Arena{{/link-to}}
{{/if}}

<h3>Arenas</h3>

<ul class="list-group">
{{#each arena in model}}
    <li class="list-group-item">            
        <span class="pull-right label label-info">awards {{arena.exp}} Exp</span>
        <h4 class="list-group-item-heading">
            {{#link-to 'arena' arena.id class=".arena-name"}}
                {{arena.name}}
            {{/link-to}}
        </h4>
        <section class="list-group-item-text">
            <div>
                {{#link-to 'arena.edit' arena.id class=":arena-edit"}}
                    <i class="glyphicon glyphicon-pencil"></i> Edit
                {{/link-to}}
                {{#link-to 'arena.try' arena.id class=":arena-try"}}
                    <i class="glyphicon glyphicon-play"></i> Try
                {{/link-to}}
            </div>
            <div>
                <span class="label label-default"><i class="glyphicon glyphicon-tags"></i> Tags</span>
            </div>
        </section>
    </li>
    {{else}}
    <p>No Arenas set yet</p>
{{/each}}
</ul>