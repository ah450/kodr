<section class="col-md-8">
    <ul class="nav nav-tabs" role="tablist">
      <li><a href="#progress" role="tab" data-toggle="tab">Progress</a></li>
      <li><a href="#quests" role="tab" data-toggle="tab">Quests</a></li>
      <li><a href="#achievements" role="tab" data-toggle="tab">Achievements</a></li>
      <li><a href="#settings" role="tab" data-toggle="tab">Settings</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane" id="home">
      </div>
      <div class="tab-pane" id="progress">...</div>
      {{#if session.isStudent }}
        <div class="tab-pane active" id="quests">
          {{#each quest in model.userQuests}}
            {{quest.name}}
            <ul class="list-group">    
            {{#each req in quest.requirements}}
                  <li class="list-group-item">
                     {{partial '_requirement' }}
                  </li>
                {{else}}
                  Does not have any requirements
                {{/each}}
            </ul>
          {{/each}}
        </div>
        <div class="tab-pane" id="achievements">...</div>
      {{/if}}
      <div class="tab-pane" id="settings">...</div>
    </div>
</section>

