<section class="description row">
  <div class="col-lg-12">
    {{view 'App.MarkedMathView' model=model.challenge observable='description' }}
  </div>
</section>
<section class="row">
<div class="col-lg-6">
    <a id="run" {{action "runInConsole"}} class="btn btn-default pull-right">Run in Console <i class="glyphicon glyphicon-play"></i></a>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#code" data-toggle="tab">Code</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane  fade in active" id="code">
        {{view 'App.CodeEditorView'
          name="codeEditor"
          id="editor"
          class="col-lg-12"
          model=model
          attr='code' }}
      </div>
    </div>
</div>
<div class="col-lg-6">
<a id="run" {{action "run"}} class="btn btn-primary pull-right">Submit <i class="glyphicon glyphicon-play"></i></a>
    <ul class="nav nav-tabs">
      <li class="active"><a href="#console" data-toggle="tab">Console</a></li>
      <li class=""><a href="#results" data-toggle="tab">Results</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane fade in active" id="console">
        {{view App.ConsoleView }}
      </div>
      <div class="tab-pane fade" id="results">
        {{controller.results}}
      </div>
      <div id="sandbox">
        
      </div>
    </div>
</div>  
</section>
