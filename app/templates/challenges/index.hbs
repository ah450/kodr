
{{#link-to 'challenges.create' class="btn btn-primary pull-right" }} <i class="glyphicon glyphicon-plus"></i> Create Challenge{{/link-to}}
<h3>Challenges</h3>

<ul class="list-group">
{{#each challenge in model}}
    <li class="list-group-item">
        <h4 class="list-group-item-heading">
            <span class="badge">{{challenge.exp}}</span>
            {{#link-to 'challenge' challenge.id class=""}}
                {{challenge.name}}
            {{/link-to}}
        </h4>
        <section class="list-group-item-text">
            <div>
                <a href="#"><i class="glyphicon glyphicon-comment"></i> Discussion</a>
                {{#link-to 'challenge.edit' challenge.id class=""}}
                    <i class="glyphicon glyphicon-pencil"></i> Edit
                {{/link-to}}
                {{#link-to 'challenge.try' challenge.id class=""}}
                    <i class="glyphicon glyphicon-play"></i> Try
                {{/link-to}}
            </div>
            <div>
                <span class="label label-default"><i class="glyphicon glyphicon-tags"></i> Tags</span>
            </div>
        </section>
    </li>
{{/each}}
</ul>