<section class="group-controlles row">
  <ul class="nav nav-pills pull-right">
    <li {{action "save"}} class="group-save" >
      <a href="#"><i class="glyphicon glyphicon-save"></i> Save</a>
    </li>
    <li {{action 'delete' }} class="group-delete">
      <a href="#"><i class="glyphicon glyphicon-remove"></i> Delete</a>
    </li>
  </ul>
</section>
<section class="group-settings row">
<form role="form">
  <div class="form-group">
    <div class="editable col-lg-12">
      <label for="name" class="control-label">Group name</label>
      {{input id="name" value=model.name class="group-name form-control"}}
    </div>
  </div>
  <div class="form-group">
    <div class="editable col-lg-12">
      <label for="name" class="control-label">Add Group members</label>
      {{chosen id="memebers"
          name="members"
          multiple=true
          content=membersOptions
          optionValuePath="content"
          optionLabelPath="content.username"
          selection=selected
          class="group-members form-control"
          }}
    </div>
  </div>
</form>
</section>
<section class="group-members">
<div class="col-md-12">
  <h4>Members</h4>
  <ul class="item-group">
    {{#each user in model.members}}
      <li class="list-group-item">
        <a href="#remove" {{action "remove" user }} class="group-member-remove pull-right">
                    <i class="glyphicon glyphicon-cross"></i> Remove
                </a>
        {{user.username}}
      </li>
    {{else}}
      Does not contain any members
    {{/each}}
  </ul>
</div>
</section>